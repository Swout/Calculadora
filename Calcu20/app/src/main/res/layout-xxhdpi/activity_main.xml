<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#352E2E"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".MainActivity"
    tools:ignore="RtlHardcoded">

    <EditText
        android:id="@+id/ShowNumbers"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="20sp"
        android:autofillHints="username"
        android:background="#453E3E"
        android:backgroundTint="#2D2F31"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:labelFor="@id/ShowNumbers"
        android:paddingTop="30sp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        tools:text="0" />

    <TableLayout
        android:layout_margin="1pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_margin="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buMore"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buNumbersEvent"
                android:text="M+"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/MemorieClear"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buNumbersEvent"
                android:text="MC"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buMenor"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buNumbersEvent"
                android:text="M-"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/mermoR"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buNumbersEvent"
                android:text="mr"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_margin="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/limpia"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buclean"
                android:text="C"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/Division"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buOpEvent"
                android:text="/"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/Multiplicacion"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buOpEvent"
                android:text="X"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/Del"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:text="DEL"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_margin="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="7"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="8"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="9"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/resta"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buOpEvent"
                android:text="-"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_margin="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="4"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="5"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="6"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/suma"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buOpEvent"
                android:text="+"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_margin="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="1"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="2"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bo3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="3"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/cuadrado"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buOpEvent"
                android:text="@string/_2"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_margin="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bopor"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="pocentaje"
                android:text="%"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bopunto"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="."
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bo0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumbersEvent"
                android:text="0"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/Igual"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#80B641"
                android:onClick="buEqEvent"
                android:shadowColor="#BA4E4E"
                android:text="="
                android:textSize="20sp"
                tools:ignore="ButtonStyle,HardcodedText" />

        </TableRow>
    </TableLayout>
</LinearLayout>